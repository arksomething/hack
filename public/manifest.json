{
  "manifest_version": 3,
  "name": "Text Capture Extension",
  "version": "1.0",
  "permissions": ["activeTab"],
  "action": {
      "default_popup": "index.html"
  },
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],
  "web_accessible_resources": [{
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
  }]
}